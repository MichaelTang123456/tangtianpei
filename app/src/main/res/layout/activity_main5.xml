                android:src="@drawable/ba" />

            <TextView
                style="@style/text4"
                android:text="@string/a7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:contentDescription="@string/app_name"
                    style="@style/image2"
                    android:src="@drawable/y" />

                <ImageView
                    android:contentDescription="@string/app_name"
                    style="@style/image3"
                    android:src="@drawable/e" />
            </LinearLayout>

            <TextView
                style="@style/text4"
                android:text="@string/a52" />


            <ImageView
                android:contentDescription="@string/app_name"
                style="@style/image1"
                android:src="@drawable/bc" />

            <TextView
                style="@style/text4"
                android:text="@string/a53" />


            <ImageView
                android:contentDescription="@string/app_name"
                style="@style/image1"
                android:src="@drawable/bd" />

            <TextView
                style="@style/text4"
                android:text="@string/a11" />



            <ImageView
                android:contentDescription="@string/app_name"
                style="@style/image1"
                android:src="@drawable/be" />


            <TextView
                style="@style/text6"
                android:text="@string/a55" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>